# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

## # Use intel_compiler
module purge
module load intel/2016.3.210
## module load intel
module load openmpi_ib
module load netcdf
export NETCDF=/opt/netcdf/4.3.2/intel/openmpi_ib/
export LD_LIBRARY_PATH=/opt/openmpi/intel/ib/lib${LD_LIBRARY_PATH:+:$LD_LIBRARY_PATH}
export LD_LIBRARY_PATH=/opt/netcdf/4.3.2/intel/openmpi_ib/lib${LD_LIBRARY_PATH:+:$LD_LIBRARY_PATH}
export LD_LIBRARY_PATH=/usr/lib64${LD_LIBRARY_PATH:+:$LD_LIBRARY_PATH}
export LD_LIBRARY_PATH=/home/rus043/regionalCOAM/esmf/lib/libg/Linux.intel.64.openmpi.default${LD_LIBRARY_PATH:+:$LD_LIBRARY_PATH}

## # For WW3 and WW3_NC options
export PATH=/home/rus043/kaust_project/regionalcoam/ww3/bin:${PATH}
export PATH=/home/rus043/kaust_project/regionalcoam/ww3/exe:${PATH}
export WWATCH3_NETCDF=NC4
export NETCDF_CONFIG='/opt/netcdf/4.3.2/intel/openmpi_ib/bin/nc-config'
# export NETCDF_LIBDIR='/opt/netcdf/3.6.2/intel/lib'
# export NETCDF_INCDIR='/opt/netcdf/3.6.2/intel/include'

export PROMPT_DIRTRIM=3
PS1="[\u@\h]\w$ "
set prompt  = "`hostname` % "
alias b="cd .."
alias bb="cd ../.."
alias mv="mv -i"
alias cp="cp -i"
alias rm="rm -i"
alias ll="ls -l"

